<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
            id="fin_search_unified.color_picker_facet_result"
            class="FinSearchUnified\Bundle\FacetResult\ColorPickerFacetResult"
        />
        <service id="fin_search_unified.shopware_process" class="FinSearchUnified\ShopwareProcess">
            <argument type="service" id="cache" />
            <argument type="service" id="shopware_product_stream.repository" />
            <argument type="service" id="shopware_storefront.context_service" />
            <argument type="service" id="shopware_search.product_number_search" />
        </service>
        <service
            id="fin_search_unified.article_model_factory"
            class="FinSearchUnified\BusinessLogic\FindologicArticleFactory"
        />
        <service
            id="fin_search_unified.business_logic.export"
            class="FinSearchUnified\BusinessLogic\Export">
            <argument type="service" id="fin_search_unified.searchdbal.query_builder_factory" />
            <argument type="service" id="shopware_storefront.product_service" />
            <argument type="service" id="legacy_struct_converter" />
            <argument type="service" id="shopware_storefront.context_service" />
        </service>
        <service
            id="fin_search_unified.searchdbal.query_builder_factory"
            class="FinSearchUnified\Bundle\SearchBundleDBAL\QueryBuilderFactory"
        >
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="service_container" />
            <argument type="service" id="shopware_searchdbal.dbal_query_builder_factory" />
        </service>
        <service
            id="fin_search_unified.custom_listing_hydrator"
            class="FinSearchUnified\Bundle\StoreFrontBundle\Gateway\Findologic\Hydrator\CustomListingHydrator"
        />
        <service id="fin_search_unified.helper.url_builder" class="FinSearchUnified\Helper\UrlBuilder" />
        <service
            id="fin_search_unified.query_builder_factory"
            class="FinSearchUnified\Bundle\SearchBundleFindologic\QueryBuilderFactory"
        >
            <argument type="service" id="http_client" />
            <argument type="service" id="shopware_plugininstaller.plugin_manager" />
            <argument type="service" id="config" />
        </service>
        <service
            id="fin_search_unified.business_logic.export_factory"
            class="FinSearchUnified\BusinessLogic\ExportFactory"
        />
    </services>
</container>
